{
  "name": "importador-limpasped",
  "version": "1.0.0",
  "main": "electron.cjs",
  "author": "Rafael Max",
  "description": "Sistema de Auditoria Fiscal AUDITTUS",
  "scripts": {
    "dev": "vite",
